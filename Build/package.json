{
	"name": "sitepackage",
	"version": "1.0.0",
	"description": "TYPO3 Sitepackage",
	"license": "MIT",
	"repository": "npm/npm",
	"scripts": {
		"css:dev": "onchange -i --poll 100  './scss/**/*.scss' -- time ./run/build-css.sh",
		"css:fix": "./run/build-css.sh fix",
		"js:dev": "onchange -i --poll 100  './js/**/*.js' -- time ./run/build-js.sh",
		"dev": "npm run css:dev & npm run js:dev",
		"dev:gulp": "npx gulp",
		"prod": "./run/build-css.sh prod && ./run/build-js.sh prod",
		"prod:gulp": "npx gulp buildProd"
	},
	"dependencies": {
		"jquery": "^3.4",
		"jquery.cookiebar": "^0.1",
		"lightcase": "^2.5",
		"swiper": "^5.3"
	},
	"devDependencies": {
		"acorn": "^7.1",
		"concat-cli": "^4.0",
		"concat-glob-cli": "^0.1.0",
		"csso-cli": "^3.0",
		"eslint": "^6.8.0",
		"eslint-config-standard": "^14.1",
		"eslint-plugin-import": "^2.20",
		"eslint-plugin-node": "^11.0",
		"eslint-plugin-promise": "^4.2",
		"eslint-plugin-standard": "^v4.0",
		"node-sass": "^4.13",
		"onchange": "^6.1.0",
		"postcss-cli": "^7.1.0",
		"rimraf": "^3.0.0",
		"standard": "^14.3.1",
		"stylelint-config-standard": "^19.0",
		"stylelint-scss": "^3.13",
		"stylelint": "^12.0.1",
		"uglify-js": "^3.7.4"
	},
	"browserslist": [
		"last 2 version",
		"> 1%",
		"maintained node versions",
		"not dead"
	],
	"eslintConfig": {
		"extends": "standard",
		"ignorePatterns": [
			"vendor/"
		],
		"parserOptions": {
			"ecmaVersion": 6,
			"sourceType": "script"
		}
	},
	"stylelint": {
		"plugins": [
			"stylelint-scss"
		],
		"extends": [
			"stylelint-config-standard"
		],
		"ignoreFiles": [
			"scss/vendor/**/*"
		],
		"rules": {
			"at-rule-no-unknown": null,
			"indentation": [
				2,
				{
					"ignore": [
						"value"
					],
					"message": "Please use 2 spaces for indentation.",
					"severity": "warning"
				}
			]
		}
	},
	"postcssSortingConfig": {
		"order": [
			"custom-properties",
			"dollar-variables",
			"declarations",
			"at-rules",
			"rules"
		],
		"properties-order": [
			"display",
			"position",
			"top",
			"right",
			"bottom",
			"left"
		]
	}
}
